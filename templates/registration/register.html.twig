
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            
            <h1>Register</h1>
            
            {# Debut du formulaire #}
            {{ form_start(registrationForm, {
                attr: {
                    novalidate: "novalidate"
                }}
            ) }}


                {# Ce bloc genere automatiquement la vue du formulaire #}
                {# {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }} #}


                {# Firstname #}
                <div class="form-group">
                    {# {{ form_label(registrationForm.firstname) }}
                    {{ form_widget(registrationForm.firstname) }}
                    {{ form_help(registrationForm.firstname) }}
                    {{ form_errors(registrationForm.firstname) }} #}
                    {{ form_row(registrationForm.firstname) }}
                </div>

                {# Lastname #}
                <div class="form-group row">
                    {{ form_label(registrationForm.lastname) }}
                    <div class="col-lg-9">
                        {{ form_widget(registrationForm.lastname) }}
                        {{ form_help(registrationForm.lastname) }}
                        {{ form_errors(registrationForm.lastname) }}
                    </div>
                </div>

                {# email #}
                <div class="form-group row">
                    <div class="col-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_help(registrationForm.email) }}
                    </div>
                    <div class="col-9">
                        {{ form_widget(registrationForm.email) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>


                {# Birthday #}
                <div class="form-group">
                    {{ form_label(registrationForm.birthday) }}
                    
                    {# {{ form_widget(registrationForm.birthday) }} #}
                    <div class="row">
                        <div class="col-4">
                            {{ form_widget(registrationForm.birthday.day) }}
                        </div>
                        <div class="col-4">
                            {{ form_widget(registrationForm.birthday.month) }}
                        </div>
                        <div class="col-4">
                            {{ form_widget(registrationForm.birthday.year) }}
                        </div>
                    </div>

                    {{ form_help(registrationForm.birthday) }}
                    {{ form_errors(registrationForm.lastname) }}
                </div>


                {# password #}
                {# <div class="form-group">
                    {{ form_label(registrationForm.plainPassword) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                    {{ form_help(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div> #}
                
                {# password #}
                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                    {{ form_help(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                {# agreeTerms #}
                <div class="form-group">
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_help(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>



            
                {# Bouton du soumission #}
                <button type="submit" class="btn">Register</button>

            {# Fin du formulaire #}
            {{ form_end(registrationForm) }}

            <a href="{{ path('app_login') }}">Already have account</a>


        </div>
    </div>
</div>
{% endblock %}